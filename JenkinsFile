pipeline {
    agent any

    tools {
        maven 'M2_HOME'
    }

    stages {

        stage('Git Clone') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/wafachabbi/projetDevOps.git'
            }
        }

        stage('Maven Build') {
            steps {
                echo "‚öôÔ∏è Building Maven project..."
                sh 'mvn clean package'
            }
        }

        stage('Docker Build') {
            steps {
                echo "üê≥ Building Docker image..."
                sh 'docker build -t wafachabbi/student-management:latest -f DockerFile .'
            }
        }

        stage('Docker Push') {
            steps {
                script {
                    withCredentials([
                        usernamePassword(
                            credentialsId: 'docker-hub-credentials',
                            usernameVariable: 'DOCKER_USERNAME',
                            passwordVariable: 'DOCKER_PASSWORD'
                        )
                    ]) {
                        sh """
                            echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USERNAME --password-stdin
                            docker push wafachabbi/student-management:latest
                            docker logout
                        """
                    }
                }
            }
        }

        stage('Kubernetes Deploy') {
            steps {
                echo "‚ò∏Ô∏è Deploying MySQL & Spring Boot to Kubernetes..."

                // Cr√©e le namespace si n√©cessaire
                sh 'kubectl create namespace student-management || true'

                // D√©ploiement MySQL
                sh 'kubectl apply -f mysql-deployment.yaml -n student-management'

                // D√©ploiement Spring Boot
                sh 'kubectl apply -f spring-boot-deployment.yaml -n student-management'

                // V√©rification des pods
                sh 'kubectl get pods -n student-management'
            }
        }

        stage('Sonar Analysis') {
            environment {
                SONAR_TOKEN = credentials('sonar-token')
            }
            steps {
                echo "üîç Running SonarQube analysis..."
                sh """
                    mvn sonar:sonar \
                        -Dsonar.projectKey=student-management \
                        -Dsonar.host.url=http://localhost:9000 \
                        -Dsonar.login=$SONAR_TOKEN
                """
            }
        }
    }

    post {
        success {
            emailext(
                subject: "‚úÖ Build SUCCESS : ${currentBuild.fullDisplayName}",
                body: "Le pipeline a r√©ussi.\n\nD√©tails : ${env.BUILD_URL}",
                to: 'wafachabbi21@gmail.com'
            )
        }
        failure {
            emailext(
                subject: "‚ùå Build FAILED : ${currentBuild.fullDisplayName}",
                body: "Le pipeline a √©chou√©.\n\nD√©tails : ${env.BUILD_URL}",
                to: 'wafachabbi21@gmail.com'
            )
        }
    }
}
