pipeline {
    agent any

    tools {
        maven 'M2_HOME'
    }

    stages {

        /* ====== 1. GIT CLONE ====== */
        stage('Git Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/wafachabbi/projetDevOps.git'
            }
        }

        /* ====== 2. MAVEN BUILD ====== */
        stage('Maven Build') {
                   steps {
                       echo "‚öôÔ∏è Building Maven project..."
                       sh 'mvn clean package'
                   }
               }

        /* ====== 3. SONAR ANALYSIS ====== */
        stage('Sonar Analysis') {
            environment {
                SONAR_TOKEN = credentials('sonar-token')
            }
            steps {
                sh """
                    mvn sonar:sonar \
                        -Dsonar.projectKey=student-management \
                        -Dsonar.host.url=http://localhost:9000 \
                        -Dsonar.login=$SONAR_TOKEN
                """
            }
        }

        /* ====== 4. DOCKER BUILD ====== */
        stage('Docker Build') {
            steps {
                sh """
                    echo "‚öôÔ∏è Building Docker image..."
                    docker build -t wafachabbi/student-management:latest -f DockerFile .
                """
            }
        }

        /* ====== 5. DOCKER PUSH ====== */
        stage('Docker Push') {
            steps {
                script {
                   withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials',
                                                    usernameVariable: 'DOCKER_USERNAME',
                                                    passwordVariable: 'DOCKER_PASSWORD')]) {
                       sh """
                           echo "üîê Logging in to DockerHub..."
                           echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USERNAME --password-stdin

                           echo "üì§ Pushing image..."
                           docker push wafachabbi/student-management:latest

                           echo "üö™ Logging out..."
                           docker logout
                       """
                   }
                }
            }
        }
    }
}
