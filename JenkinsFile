pipeline {
    agent any

    tools {
        maven 'M2_HOME'
    }

    stages {

        stage('Exemple 1 - Hello World') {
            steps {
                echo "Hello world !"
            }
        }

        stage('Git Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/wafachabbi/projetDevOps.git'
            }
        }

        stage('Maven Build') {
            steps {
                sh 'mvn -version'
            }
        }
        stage('Clean') {
                    steps {
                        sh 'mvn clean'
                    }
                }
                stage('Compile') {
                            steps {
                                sh 'mvn compile'
                            }
                        }
        stage('Sonar Analysis') {
            steps {
                withSonarQubeEnv('sonarqube') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

    }
}